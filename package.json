{
  "name": "react-apollo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.4.15",
    "@graphql-tools/schema": "8.2.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.1",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.2",
    "@types/node": "15.12.4",
    "@types/react": "17.0.26",
    "@types/react-dom": "17.0.9",
    "apollo-server": "3.3.0",
    "apollo-server-express": "3.3.0",
    "classnames": "2.3.1",
    "cors": "2.8.5",
    "dataloader": "2.0.0",
    "dotenv-cli": "4.0.0",
    "express": "4.17.1",
    "graphql": "15.6.0",
    "graphql-subscriptions": "1.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "4.0.3",
    "subscriptions-transport-ws": "0.9.19",
    "typescript": "4.4.3",
    "web-vitals": "2.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/fragment-matcher": "3.1.0",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-operations": "2.1.6",
    "@graphql-codegen/typescript-react-apollo": "3.1.4",
    "@trivago/prettier-plugin-sort-imports": "2.0.4",
    "lint-staged": "11.1.2",
    "nodemon": "2.0.13",
    "prettier": "2.4.1",
    "simple-git-hooks": "2.6.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "dotenv -c -- nodemon -w server server",
    "format": "prettier . -w -u",
    "codegen": "dotenv -c -- graphql-codegen --config codegen.yml",
    "codegen:watch": "npm run codegen -- -w"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "prettier -w -u"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "parserOptions": {
      "warnOnUnsupportedTypeScriptVersion": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
